post_install() {
  echo ":: asdcontrol has been installed"
  echo ":: You can now use 'sudo asdcontrol' to control Apple Display brightness"
  echo ":: Passwordless sudo has been configured for /usr/bin/asdcontrol"
}

post_upgrade() {
  post_install
}

post_remove() {
  echo ":: Sudoers configuration for asdcontrol has been removed"
}